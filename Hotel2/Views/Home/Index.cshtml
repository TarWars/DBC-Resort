@model Hotel2.Models.Reservation

<!DOCTYPE html>
<head>
    <title>Hotel Motel</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content/HomeStyle.css" rel="stylesheet" type="text/css" />
</head>

<body ng-app ="kita">
    <div id="container">
        <div id="header">
            <div id="website_title">
                <div id="title"> DBC Resort </div>
                <div id="salgon"> Divine, Beautiful, Classy.</div>
            </div>
        </div>
        <!-- end of header -->
        <div id="banner">
            <div id="menu">
                <ul>
                    <li><a href="#" class="current">Home</a></li>
                    <li><a href="#">Login</a></li>
                    <li><a href="#">Rezervacije</a></li>
                    <li><a href="#">Slike</a></li>
                    <li><a href="#">Registracija</a></li>
                    <li><a href="#" class="last">Kontakt</a></li>
                </ul>
            </div>
        </div>
        <!-- end of banner -->
        <div id="content">
            <div id="content_left">
                <div class="content_left_section">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <fieldset>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.idRoom, "Room")
                            </div>

                            <div class="editor-label">
                                @Html.LabelFor(model => model.idGuest, "Guest")
                            </div>
                            <div class="editor-field">
                                @Html.DropDownList("idGuest", String.Empty)
                                @Html.ValidationMessageFor(model => model.idGuest)
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.idEmpoyee, "Employee")
                            </div>
                            <div class="editor-field">
                                @Html.DropDownList("idEmpoyee", String.Empty)
                                @Html.ValidationMessageFor(model => model.idEmpoyee)
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.ReservationDate)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.ReservationDate)
                                @Html.ValidationMessageFor(model => model.ReservationDate)
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.StartDate)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.StartDate)
                                @Html.ValidationMessageFor(model => model.StartDate)
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.Price)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.Price)
                                @Html.ValidationMessageFor(model => model.Price)
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.EndDate)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.EndDate)
                                @Html.ValidationMessageFor(model => model.EndDate)
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.ExtraOptions)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.ExtraOptions)
                                @Html.ValidationMessageFor(model => model.ExtraOptions)
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.NumOfRooms)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.NumOfRooms)
                                @Html.ValidationMessageFor(model => model.NumOfRooms)
                            </div>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.NumOfGuests)
                            </div>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.NumOfGuests)
                                @Html.ValidationMessageFor(model => model.NumOfGuests)
                            </div>
                            <div class="cleaner_h20">&nbsp;</div>
                            <div class="rc_btn_02"><input type="submit" value="Provjeri" /></div>
                         </fieldset>
                    }
                    </div>
                         <div class="cleaner">&nbsp;</div>
                <!-- end of booking -->
                <div class="cleaner_h30">&nbsp;</div>
                <div class="cleaner_horizontal_divider_01">&nbsp;</div>
                <div class="cleaner_h30">&nbsp;</div>
                <div class="content_left_section">
                    <div class="content_title_01">Novosti</div>
                    <div class="news_title">Otvaranje hotela Motel!</div>
                    <p>Nakon dugogodišnjeg developanja website-a, prestižni hotel Motel je otvoren.. <a href="#">Proširi</a></p>
                    <div class="cleaner_h30">&nbsp;</div>
                    <div class="news_title">Skandal sa layoutima</div>
                    <p>Programer T.M. je uhapšen i deportiran nakon skandaloznih saznanja o lošem dizajnu layouta za hotel Motel <a href="#">Proširi</a></p>
                    <div class="cleaner_h20">&nbsp;</div>
                    <div class="rc_btn_02"><a href="#">Proširi</a></div>
                </div>
                <!-- end of news section -->
            </div>
            <!-- end of content left -->
            <div id="content_right">
                <div class="content_right_section">
                    <div class="content_title_01">Welcome to hotel &amp; travel</div>
                    <img src="/Content/image_01.jpg" alt="" />
                    <p>Ovo je nevjerovatni Hotel Motel.</p>
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec dictum, urna eu feugiat ultricies, turpis leo tempor lacus, in vestibulum diam nisl sed lorem. </p>
                    <p>Napisaćemo nešto već o hotelu bla bla bla bla bla bla bla</p>
                </div>
                <div class="cleaner_h40">&nbsp;</div>
                <div class="content_right_section">
                    <div class="content_title_01">Slike</div>
                    <div class="gallery_box"> <img src="~/Content/image_02.jpg" alt="" /> <a href="#">1</a> </div>
                    <div class="gallery_box"> <img src="~/Content/image_03.jpg" alt="" /> <a href="#">2</a> </div>
                    <div class="gallery_box"> <img src="~/Content/image_04.jpg" alt="" /> <a href="#">3</a> </div>
                    <div class="gallery_box"> <img src="~/Content/image_05.jpg" alt="" /> <a href="#">4</a> </div>
                    <div class="gallery_box"> <img src="~/Content/image_06.jpg" alt="" /> <a href="#">5</a> </div>
                    <div class="cleaner_h20">&nbsp;</div>
                    <div class="rc_btn_02"><a href="#">Proširi</a></div>
                    <div class="cleaner">&nbsp;</div>
                </div>
                <div class="cleaner_h20">&nbsp;</div>
            </div>
            <!-- end of content right -->
            <div class="cleaner">&nbsp;</div>
        </div>
        <div id="footer">
            Copyright &copy; 2015 <a href="#"><strong>DBC Resort</strong></a>
        </div>
        <!-- end of footer -->
    </div>
    <!-- end of container -->
</body>